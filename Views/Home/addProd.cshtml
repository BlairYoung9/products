@model CategoryView
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    @{
        Category Display = Model.ToRender;
        Association AddForm = Model.AddForm;
        List<Product> ToAdd = Model.ToAdd;
    }
    }
    <div class = "container p-3">
        <h1 class ="pb-3 m-3 border-bottom">Product Categories!</h1>
        <div class = "container d-flex justify-content-between mt-4">
        </div>
        <h1>@Display.CategoryName</h1>
        <h3>Existing Categories</h3>
        @foreach (var item in Display.listOfProds)
        {
            <a href="">@item.ProductWithCat.Name</a>
        }
        <form asp-action="updateCategory">
            <label asp-for="AddForm.ProductId">Available Products to add</label>
            <select asp-for="AddForm.ProductId">
                @foreach (var product in ToAdd)
                {
                    <option value="@product.ProductId">@product.Name</option>
                }
            </select>
            <input type="hidden" asp-for = "@AddForm.CategoryId" value="@Display.CategoryId">
            <button>Add Thing</button>
        </form>  
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
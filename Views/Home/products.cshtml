@model Product;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class = "container p-3">
        <h1 class ="pb-3 m-3 border-bottom">Check out our roster of chefs!</h1>
        <div class = "container d-flex justify-content-between mt-4">
        </div>
        <form asp-action = "NewProduct">
                    <p class ="d-flex justify-content-between">
                        Name:
                        <span asp-validation-for="Name"></span>
                        <input asp-for ="Name">
                    </p>
                    <p class ="d-flex justify-content-between">
                        Description:
                        <span asp-validation-for="Description"></span>
                        <textarea asp-for ="Description" cols="55" rows="3"></textarea>
                    </p>
                    <p class ="d-flex justify-content-between">
                        Price:
                        <span asp-validation-for="Price"></span>
                        <input asp-for ="Price">
                    </p>
                    <button class="btn btn-primary mt-2">Register</button>
                </form>
        <h3>Existing Products</h3>
        @foreach (var item in Model.listofProds)
        {
            <a href="/products/@item.ProductId">@item.Name</a>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>